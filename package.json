{
  "name": "@modular-cms/api",
  "version": "1.1.0",
  "description": "Unified API package for ModulaR CMS - Supports both CMS and Module applications with Elysia/Bun",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*.js",
    "dist/*.d.ts",
    "dist/*.map",
    "!dist/TESTING",
    "!src",
    "!src-elysia",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lukseh/modular-api.git"
  },
  "keywords": [
    "cms",
    "api",
    "modular",
    "typescript",
    "elysia",
    "bun",
    "microservices",
    "module-system",
    "lunar"
  ],
  "author": "Lukseh74",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Lukseh/modular-api/issues"
  },
  "homepage": "https://github.com/Lukseh/modular-api#readme",
  "packageManager": "bun@1.2.19",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@elysiajs/swagger": "^1.3.1",
    "elysia": "^1.3.8"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "scripts": {
    "clean": "bun run rimraf dist",
    "dev": "bun --watch src-elysia/index.ts",
    "build": "bun run clean && tsc && bun run postbuild",
    "postbuild": "echo '🚀 v1.1.0 build completed successfully! Package ready for publishing.'",
    "prepublishOnly": "bun run build && echo '⚠️  NOTE: Real publishing is handled by GitHub Actions. This is for validation only.'",
    "start": "bun dist/index.js",
    "test": "bun test",
    "benchmark": "node benchmark.js",
    "publish:dry": "npm publish --dry-run",
    "publish:check": "echo '📋 Checking package contents...' && npm pack --dry-run && echo '✅ Use GitHub Actions for actual publishing'",
    "publish:validate": "bun run build && bun run publish:dry && echo '✅ Package validation complete. Ready for GitHub Actions deployment.'",
    "lockfile:generate": "rm -f yarn.lock package-lock.json && bun install",
    "lockfile:update": "bun update"
  },
  "devDependencies": {
    "@types/bun": "^1.2.20",
    "@types/node": "^24.1.0",
    "bun-types": "^1.2.20",
    "rimraf": "^5.0.5",
    "typescript": "^5.9.2"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cms": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./module": {
      "import": "./dist/index.js",
      "require": "./dist/index.js", 
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "trustedDependencies": [
    "elysia",
    "@elysiajs/swagger"
  ]
}
